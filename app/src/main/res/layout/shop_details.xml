<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="7dp"
    card_view:cardElevation="5dp"
    card_view:cardUseCompatPadding="true">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">


        <ImageView
            android:id="@+id/shop_pic"
            android:tag="image_tag"
            android:layout_width="70dp"
            android:layout_height="75dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:src="@drawable/and"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/shopnaam"
            android:textSize="15sp"
            android:text="Shop Name"
            android:textStyle="bold"
            android:textColor="#AD000000"
            android:layout_toEndOf="@+id/shop_pic"
            android:layout_toRightOf="@+id/shop_pic"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:drawableStart="@drawable/ic_home_black_24dp"
            android:layout_marginTop="5dp"
            android:drawablePadding="10dp"
            android:layout_below="@+id/address"
            android:drawableLeft="@drawable/ic_home_black_24dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/shopkeeper"
            android:textSize="15sp"
            android:text="Shopkeeper Name"
            android:drawableStart="@drawable/ic_person_black_24dp"
            android:textColor="#E5000000"
            android:textStyle="italic"
            android:drawablePadding="10dp"
            android:layout_toEndOf="@+id/shop_pic"
            android:layout_toRightOf="@+id/shop_pic"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/shopnaam"
            android:drawableLeft="@drawable/ic_person_black_24dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/shopAdd"
            android:textSize="15sp"
            android:text="Address"
            android:drawableStart="@drawable/ic_location_on_black_24dp"
            android:textColor="#E5000000"
            android:textStyle="normal"
            android:drawablePadding="10dp"
            android:layout_toEndOf="@+id/shop_pic"
            android:layout_toRightOf="@+id/shop_pic"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/shopkeeper"
            android:drawableLeft="@drawable/ic_location_on_black_24dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/local"
            android:textSize="15sp"
            android:text="Locality"
            android:drawableStart="@drawable/ic_local_activity_black_24dp"
            android:textColor="#E5000000"
            android:textStyle="normal"
            android:drawablePadding="10dp"
            android:layout_toEndOf="@+id/shop_pic"
            android:layout_toRightOf="@+id/shop_pic"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/shopAdd"
            android:drawableLeft="@drawable/ic_local_activity_black_24dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/phone"
            android:textSize="15sp"
            android:text="Phone"
            android:drawableStart="@drawable/ic_local_phone_black_24dp"
            android:textColor="#E5000000"
            android:textStyle="normal"
            android:drawablePadding="10dp"
            android:layout_toEndOf="@+id/shop_pic"
            android:layout_toRightOf="@+id/shop_pic"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/local"
            android:drawableLeft="@drawable/ic_local_phone_black_24dp" />





    </RelativeLayout>



</androidx.cardview.widget.CardView>
